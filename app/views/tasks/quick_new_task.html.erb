<div class="container">
  <div class="row">
    <div class ="col-md-8 col-md-offset-2">
      <div class="project-boundry">
      <h4>Quick Add Task</h4>
        <%= form_for(@task, {url: post_quick_new_task_path, controller: "tasks", action: "create", method: "post"}) do |f| %>
          <div class="form-group">
            <%= f.label :name, class: "label-block"%>
              <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :description, class: "label-block" %>
              <%= f.text_field :description, class: "form-control"%>
          </div>
          <div class="form-group">
            <%= f.label :due_date, class: "label-block" %>
              <%= f.date_select(:due_date, :order => [:month, :day, :year]) %>
          </div>
          <div class="form-group project-select">
            <%= f.label :project_id, "Project", class: "label-block"  %>
              <%= collection_select(:task, :project_id, @projects, :id, :name, { include_blank: true }) %>
          </div>
          <div class="form-group">
            <%= f.hidden_field :owner_id, value: @user.id %>
            <%= f.submit class: "btn btn-primary"%>
          </div>
        <% end %>
  </div>
</div>
