<div class="container">
  <div class="row">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group">
        <%= f.label :Name %><br />
        <%= f.text_field :name, autofocus: true, :placeholder => "Enter Name", label: false, :class => "form-control"  %>
      </div>
      <div class="form-group">
        <%= f.label :Email %><br />
        <%= f.text_field :email, :placeholder => " Enter Email", :class =>'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :Password %><br />
        <%= f.text_field :password, placeholder: "Enter Password", :class => 'form-control'%>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.text_field :password_confirmation, placeholder: "Enter Password confirmation", label: false, :class => 'form-control' %>
      </div>
      <%= submit_tag("Sign up", :class=>"form-control btn btn-primary", :name=>"submit") %>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>

